{% extends 'base.html.twig' %}

{% block title %}Campus{% endblock %}

{% block body %}
    <h1>Campus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ campus.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ campus.reference }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ campus.designation }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ campus.address }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ campus.type }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ campus.city }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ campus.province }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ campus.createdAt ? campus.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ campus.updatedAt ? campus.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('campus_index') }}">back to list</a>

    <a href="{{ path('campus_edit', {'id': campus.id}) }}">edit</a>

    {{ include('campus/_delete_form.html.twig') }}
{% endblock %}
